<?xml version="1.0" encoding="utf-8"?>
<uikit.widget.RowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_content_tint"
    android:padding="@dimen/offsetMedium"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_globe_28"
        android:background="@drawable/bg_oval"
        android:scaleType="centerInside"
        android:backgroundTint="?attr/backgroundContentAttentionColor"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:paddingHorizontal="@dimen/offsetMedium"
        android:breakStrategy="high_quality"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/textPrimaryColor"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center"
        android:tint="?attr/iconSecondaryColor"
        android:src="@drawable/ic_chevron_right_16"/>

</uikit.widget.RowLayout>