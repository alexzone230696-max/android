<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <uikit.widget.ColumnLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/offsetMedium">

            <uikit.widget.ColumnLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.tonapps.tonkeeper.ui.screen.onramp.main.view.CurrencyInputView
                    android:id="@+id/send_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:title="@string/send"/>

                <com.tonapps.tonkeeper.ui.screen.onramp.main.view.CurrencyInputView
                    android:id="@+id/receive_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:title="@string/receive"
                    app:valueScale="3"/>

            </uikit.widget.ColumnLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/switch_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_swap_vertical_16"
                android:scaleType="centerInside"
                android:tint="?attr/iconPrimaryColor"
                android:background="@drawable/bg_button_tertiary"/>

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:textAppearance="@style/TextAppearance.Body2"
            android:textColor="?attr/textSecondaryColor"/>

    </uikit.widget.ColumnLayout>

    <FrameLayout
        android:id="@+id/action_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemHeight"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/offsetMedium">

        <uikit.widget.LoaderView
            android:id="@+id/loader"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <Button
            style="@style/Widget.App.Button"
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_action"
            android:textAppearance="@style/TextAppearance.Label1"/>

    </FrameLayout>

</FrameLayout>